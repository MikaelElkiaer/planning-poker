.container-fluid
    .row
        .col-sm-4.col-sm-offset-4
            .panel.panel-default
                .panel-heading
                    .btn-group.pull-right
                        button.btn.btn-default.btn-sm(type='button', style='margin-top: -3px')
                            span.fa([ngClass]='{ "fa-stop": isVoting, "fa-play": !isVoting }')
                    h4.panel-title
                        | Game: {{ gameId }}
                .panel-body(style='text-align: center')
                    .vote([class.user]='player.user.pid === userPid', *ngFor='let player of playersList')
                        .poker-card {{ player.currentCard | cardText }}
                        span.username
                            small([hidden]='player.pid !== hostPid')
                                span.fa.fa-star
                            | {{ player.user.userName }}