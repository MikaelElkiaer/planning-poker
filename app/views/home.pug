.container-fluid
    .row
        .col-sm-4.col-sm-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Menu
                .panel-body
                    form(name='joinForm', novalidate, (ngSubmit)='OnJoinGame()', #joinForm='ngForm')
                        .input-group
                            input.form-control(type='text', name='gameId', width='8', placeholder='Game Id',
                                required, pattern='[0-9a-f]{8}', minlength='8', maxlength='8',
                                [(ngModel)]='joinModel.gameId', #name='ngModel')
                            span.input-group-btn
                                button.btn.btn-default(type='submit', [disabled]='!joinForm.form.valid')
                                    | Join Game&nbsp;
                                    i.fa.fa-arrow-right
                    form.form-inline(name='createForm', novalidate, (ngSubmit)='OnCreateGame()')
                        .input-group
                            span.input-group-btn
                                button.btn.btn-default(type='submit', style='width:100%')
                                    i.fa.fa-plus
                                    | &nbsp;Create Game
    .row
        .col-sm-4.col-sm-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Active Users
                .panel-body.text-center
                    span(style='margin: 0px 10px; display: inline-block;',
                            *ngFor='let u of UsersList()')
                        i.fa.fa-user
                        | &nbsp;{{u.UserName}}