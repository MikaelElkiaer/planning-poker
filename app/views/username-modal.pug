.modal-header
  h4.modal-title Change username
  button.close(type='button', aria-label='Close', (click)='activeModal.dismiss()')
    span(aria-hidden='true') &times;
.modal-body
  .container
    form(name='changeUserNameForm', (submit)='activeModal.close(userName)', #changeUserNameForm='ngForm')
      .form-group.row
        .col-9
          input.form-control(type='text', autofocus, name='userName', width='12', placeholder='User Name',
          required, pattern='[a-zA-Z0-9]{2,12}', minlength='2', maxlength='12',
          [(ngModel)]='userName', #name='ngModel')
        .col-3
          button.btn.btn-success.w-100(type='submit', [disabled]='!changeUserNameForm.form.valid')
